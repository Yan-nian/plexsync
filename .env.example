# Plex 配置
PLEX_BASE_URL=http://192.168.1.100:32400
PLEX_TOKEN=your_plex_token_here

# Trakt 配置（在 https://trakt.tv/oauth/applications 创建应用获取）
TRAKT_CLIENT_ID=your_trakt_client_id
TRAKT_CLIENT_SECRET=your_trakt_client_secret

# 应用设置
SYNC_INTERVAL=3600        # 同步间隔（秒），3600 = 1小时
DRY_RUN=False             # True = 测试模式，不修改 Plex
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR
PLEX_LIBRARIES=           # 留空 = 全部媒体库，或指定: "Movies,TV Shows"

# Web Dashboard
WEB_PORT=5000             # Web 界面端口
