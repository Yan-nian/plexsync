# Plex Configuration
PLEX_BASE_URL=http://192.168.1.100:32400
PLEX_TOKEN=your_plex_token_here

# Trakt Configuration
# Get these from: https://trakt.tv/oauth/applications
TRAKT_CLIENT_ID=your_trakt_client_id
TRAKT_CLIENT_SECRET=your_trakt_client_secret

# Application Settings
SYNC_INTERVAL=3600          # Sync interval in seconds (3600 = 1 hour)
DRY_RUN=False               # Set to True to test without making changes
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
PLEX_LIBRARIES=             # Leave empty for all, or specify: "Movies,TV Shows"

# Web Dashboard
WEB_MODE=True               # Enable web dashboard (set False for CLI-only mode)
WEB_PORT=5000               # Web dashboard port

# Advanced Settings (optional)
TRAKT_TIMEOUT=30            # API request timeout in seconds
PLEX_TIMEOUT=30             # Plex API timeout in seconds
MAX_RETRIES=3               # Number of retries for failed API calls
